{
  "manifest_version": 3,
  "name": "Quotura",
  "version": "1.0",
  "description": "Highlight text and create beautiful quote images with one click.",
  "permissions": ["contextMenus", "activeTab", "scripting", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
